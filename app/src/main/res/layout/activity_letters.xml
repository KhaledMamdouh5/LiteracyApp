<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityLetters">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LetterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="205dp"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="8dp"
                android:text="حرف الألف"
                android:textAllCaps="false"
                android:textColor="#3F51B5"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/LetterImage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/thefirstletter"
                android:onClick="letterimage"
                tools:ignore="OnClick"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LetterAtEnd"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#00FFFFFF"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:onClick="letteratend"
                    android:text="ـا"
                    android:textColor="#000000"
                    android:textSize="44sp" />

                <TextView
                    android:id="@+id/LetterAtMiddle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="96dp"
                    android:layout_marginRight="96dp"
                    android:background="#00FFFFFF"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:onClick="letteratmiddle"
                    android:text="ـا"
                    android:textColor="#000000"
                    android:textSize="44sp" />

                <TextView
                    android:id="@+id/LetterAtBegin"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#00FFFFFF"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:onClick="letteratbegin"
                    android:text="ا"
                    android:textColor="#000000"
                    android:textSize="44sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Letter3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#00FFFFFF"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:onClick="letter3"
                    android:text="إِ"
                    android:textColor="#000000"
                    android:textSize="44sp" />

                <TextView
                    android:id="@+id/Letter2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="96dp"
                    android:layout_marginRight="96dp"
                    android:background="#00FFFFFF"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:onClick="letter2"
                    android:text="أُ"
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/Letter1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#00FFFFFF"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:onClick="letter1"
                    android:text="أَ"
                    android:textColor="#000000"
                    android:textSize="44sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp">

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Camera"
                    android:layout_width="80dp"
                    android:layout_height="65dp"
                    android:onClick="camera"
                    android:background="@drawable/pen"/>

                <Button
                    android:id="@+id/Forward"
                    android:layout_width="100dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/rightarrow"
                    android:onClick="forward"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

